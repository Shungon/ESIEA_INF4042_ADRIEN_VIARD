<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:orientation="vertical"
        android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:id="@+id/list_item_image" />

    <TextView
        android:text="@string/image_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_title"/>

    <TextView
        android:text="Character(s):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_characters"
        android:layout_below="@+id/list_item_title"/>

    <TextView
        android:text="Type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_type"
        android:layout_below="@+id/list_item_characters" />

    <TextView
        android:text="Director(s):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_directors"
        android:layout_below="@+id/list_item_type" />

    <TextView
        android:text="Actor(s):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_actors"
        android:layout_below="@+id/list_item_directors" />

    <TextView
        android:text="Producer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_producer"
        android:layout_below="@+id/list_item_actors" />

    <TextView
        android:text="Nationality:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_nationality"
        android:layout_below="@+id/list_item_producer" />

    <Button
        android:text="@string/btn_store_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStoreImage"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>